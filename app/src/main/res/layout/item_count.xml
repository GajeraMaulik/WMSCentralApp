<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/itemCount_View"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_3sdp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="@dimen/_290sdp"
            android:layout_height="@dimen/_70sdp"
            android:padding="@dimen/_2sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemL_Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/open_sans"
                    android:text="Item :"
                    android:textColor="@color/pickItem"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/itemNo_Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textFontWeight="600"
                    android:fontFamily="@font/open_sans"
                    android:text="NA"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />


                <TextView
                    android:id="@+id/binL_Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_29sdp"
                    android:fontFamily="@font/open_sans"
                    android:text="Bin:"
                    android:textColor="@color/pickItem"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/binNo_Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"

                    android:layout_marginEnd="@dimen/_60sdp"
                    android:textFontWeight="600"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans"
                    android:text="NA"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lBinqty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qtyL_Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/open_sans"
                    android:text="Qty:"
                    android:textColor="@color/pickItem"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/qtyNo_Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/open_sans"
                    android:textStyle="bold"
                    android:text="NA"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tagL_Count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_60sdp"
                        android:fontFamily="@font/open_sans"
                        android:text="Tag:"
                        android:textColor="@color/pickItem"
                        android:textFontWeight="600"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tag_Count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/open_sans"
                        android:text="NA"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lBinqty"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timeL_Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/open_sans"
                    android:text="Time :"
                    android:textColor="@color/pickItem"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/count_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/open_sans"
                    android:text="NA"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_15sdp" />
                <TextView
                    android:id="@+id/count_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:fontFamily="@font/open_sans"
                    android:text="NA"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/recountL_Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/open_sans"
                    android:text="Recount :"
                    android:textColor="@color/pickItem"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <Switch
                    android:id="@+id/reCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"

                    android:layout_marginEnd="@dimen/_5sdp"
                    android:track="@drawable/track"
                    android:thumb="@drawable/thumb"
                    
                    android:text="@null"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>