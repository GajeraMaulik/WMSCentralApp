<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_Picked_View"
    android:padding="@dimen/_10sdp">


    <androidx.cardview.widget.CardView
        android:id="@+id/pickedItem_View"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:outlineAmbientShadowColor="@color/shadow"
        android:outlineSpotShadowColor="@color/shadow"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:textColor="@color/pickItem"
            android:textFontWeight="600"
            android:fontFamily="@font/open_sans"
            android:text="Order Number :"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/ordNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/open_sans"
            android:textFontWeight="600"
            android:textStyle="bold"
            android:text="NA"
            android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/pickItem"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="600"
                android:text="Scanned:"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/scannDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="600"
                android:textStyle="bold"
                android:text="NA"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/scanTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="600"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_40sdp"
                android:textSize="@dimen/_15sdp"
                android:text="15:51:35"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>