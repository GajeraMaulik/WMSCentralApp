<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Fragments.InventoryFragment">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/poReceiving"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:text="PO Receiving"
            android:textAlignment="center"
            app:backgroundTint="@null"
            android:background="@drawable/fill_button_selector"
            android:textColor="@drawable/fill_button_text_selector"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/inventTransaction"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@id/poReceiving"
            android:layout_alignStart="@+id/poReceiving"
            android:layout_marginStart="0dp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            app:backgroundTint="@null"
            android:background="@drawable/fill_button_selector"
            android:textColor="@drawable/fill_button_text_selector"
            android:text="Inventory Transaction"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/reciveContainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@id/inventTransaction"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_alignStart="@+id/inventTransaction"
            android:layout_marginStart="0dp"
            app:backgroundTint="@null"
            android:background="@drawable/fill_button_selector"
            android:textColor="@drawable/fill_button_text_selector"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="Recive Container"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>