<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomsheet"
    android:padding="@dimen/_2sdp"

    android:layout_width="match_parent"
    android:layout_height="@dimen/_400sdp">

    <RelativeLayout
        android:id="@+id/dialog_Box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <androidx.cardview.widget.CardView
android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/dialog_Box1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/bsd_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Print request label for item F740"
                android:textColor="@color/pickItem"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/bsd_View"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/bsd_Title"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/pia"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/bsd_Single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bsd_View"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:backgroundTint="@null"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Single"
                android:textAllCaps="false"
                android:textColor="@color/bsdtext"
                android:textFontWeight="600"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/bsd_View1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/bsd_Single"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/pia"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/bsd_Inner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bsd_View1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:backgroundTint="@null"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Inner"
                android:textAllCaps="false"
                android:textColor="@color/bsdtext"
                android:textFontWeight="600"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/bsd_View2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/bsd_Inner"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/pia"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/bsd_Master"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bsd_View2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:backgroundTint="@null"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Master"
                android:textAllCaps="false"
                android:textColor="@color/bsdtext"
                android:textFontWeight="600"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/bsd_View3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/bsd_Master"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/pia"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/bsd_Sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bsd_Master"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:backgroundTint="@null"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:visibility="gone"
                android:padding="@dimen/_7sdp"
                android:text="Manual Substitution"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/bsdtext"
                android:textFontWeight="600"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainView"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/bsd_Cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bsd_View3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent"
            android:backgroundTint="@null"
            android:fontFamily="@font/open_sans"
            android:padding="@dimen/_10sdp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/bsdtext"
            android:textFontWeight="700"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>