<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PackOderScreens.PackAttachItemActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="@drawable/custom_toolbar"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/back_Btn_mt"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:srcCompat="@drawable/short_left"
            tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/issue_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Attach Item"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />


    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/item_view_Pai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolBar"
        android:padding="@dimen/_10sdp"
        android:gravity="left"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemlabel_mt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Item Number:"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/tvItemNo_Pai"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_35sdp"
            android:padding="@dimen/_10sdp"
            android:paddingStart="@dimen/_12sdp"
            android:textStyle="bold"
            android:text="00000"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:layout_alignTop="@+id/itemlabel_mi"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toRightOf="@+id/itemlabel_mi"
            android:background="@drawable/pd_et_bg" />




    </LinearLayout>
        <Button
            android:id="@+id/btnSubmit_mt"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"

            android:layout_below="@+id/item_view_Pai"
            android:layout_marginTop="@dimen/_350sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/fill_button_selector"
            android:fontFamily="@font/open_sans"
            android:gravity="center_vertical|center_horizontal"
            android:text="Submit"

            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@drawable/fill_button_text_selector"
            android:textFontWeight="600"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:visibility="visible"
            app:backgroundTint="@null"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>