<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PackOderScreens.PackReviewBoxDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/custom_toolbar"
            tools:ignore="MissingConstraints">


            <ImageView
                android:id="@+id/back_Btn_Prbd"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:srcCompat="@drawable/short_left"
                tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry" />

            <TextView
                android:id="@+id/title_Reviewbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Detail"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />


        </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/scanDate_prbd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/qtylabel_pd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:text="Scan Date:"
            android:textColor="@color/pickItem"
            android:textSize="@dimen/_15sdp" />

        <EditText
            android:id="@+id/etScanDate_prbd"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignTop="@+id/itemlabel_pd"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginTop="0dp"
            android:paddingStart="@dimen/_10sdp"
            android:layout_toRightOf="@+id/itemlabel_pd"
            android:autoSizeTextType="uniform"
            android:background="@drawable/review_box_detail_bg"
            android:focusable="auto"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />


    </LinearLayout>
        <LinearLayout
            android:id="@+id/qtyNo_view_prbd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemNo_view_prbd"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:text="Quantity:"
                android:textColor="@color/pickItem"
                android:textSize="@dimen/_15sdp" />

            <EditText
                android:id="@+id/qtyNo_prbd"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignTop="@+id/itemlabel_pd"
                android:layout_marginStart="@dimen/_49sdp"
                android:layout_marginTop="0dp"
                android:paddingStart="@dimen/_10sdp"
                android:layout_toRightOf="@+id/itemlabel_pd"
                android:autoSizeTextType="uniform"
                android:background="@drawable/review_box_detail_bg"
                android:focusable="auto"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/itemNo_view_prbd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scanDate_prbd"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:text="Item Number:"
                android:textColor="@color/pickItem"
                android:textSize="@dimen/_15sdp" />

            <EditText
                android:id="@+id/itemNo_prbd"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignTop="@+id/itemlabel_pd"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginTop="0dp"
                android:paddingStart="@dimen/_10sdp"
                android:layout_toRightOf="@+id/itemlabel_pd"
                android:autoSizeTextType="uniform"
                android:background="@drawable/review_box_detail_bg"
                android:focusable="auto"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qtyNo_view_prbd"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_210sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:padding="@dimen/_7sdp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnDelete_prbd"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:textFontWeight="600"
                android:fontFamily="@font/open_sans"
                android:layout_below="@id/edOderNo"
                android:background="@drawable/button_selector"
                android:gravity="center_horizontal|center_vertical"
                android:visibility="visible"
                android:text="Delete"
                android:textAlignment="center"
                android:textColor="@drawable/button_text_selector"
                android:textSize="@dimen/_10sdp"
                app:backgroundTint="@null"
                app:layout_constraintTop_toBottomOf="@+id/txt_pickorder_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />
            <Button
                android:id="@+id/btnSave_prbd"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/edOderNo"
                android:layout_toEndOf="@+id/btnNew"
                android:textFontWeight="600"
                android:fontFamily="@font/open_sans"
                android:visibility="visible"
                android:background="@drawable/fill_button_selector"
                android:gravity="center_horizontal|center_vertical"
                android:text="Save"
                android:textAlignment="center"
                android:textColor="@drawable/fill_button_text_selector"
                android:textSize="@dimen/_10sdp"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>