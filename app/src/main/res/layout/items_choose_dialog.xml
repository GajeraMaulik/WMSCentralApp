<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView

        android:id="@+id/item_Detail_View"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cd_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:padding="@dimen/_5sdp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="600"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Package Type"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

        <View
            android:id="@+id/cd_View"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_below="@+id/cd_Title"
            android:background="@color/pickItem" />

            <TextView
                android:id="@+id/cd_Pac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:padding="@dimen/_5sdp"
                android:layout_below="@+id/cd_View"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/open_sans"
                android:clickable="true"
                android:textFontWeight="600"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Package"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />
            <View
                android:id="@+id/cd_View1"
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_below="@+id/cd_Pac"
                android:background="@color/pickItem" />

            <TextView
                android:id="@+id/cd_Box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:padding="@dimen/_5sdp"
                android:layout_below="@+id/cd_View1"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="600"
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Box 58"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />
            <View
                android:id="@+id/cd_View2"
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_below="@+id/cd_Box"
                android:background="@color/pickItem" />

            <TextView
                android:id="@+id/cd_Box1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cd_View2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/open_sans"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:padding="@dimen/_5sdp"
                android:text="Box 54"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />
            <View
                android:id="@+id/cd_View3"
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_below="@+id/cd_Box1"
                android:background="@color/pickItem" />

            <TextView
                android:id="@+id/cd_Box2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:padding="@dimen/_5sdp"
                android:layout_below="@+id/cd_View3"
                android:layout_alignParentEnd="true"
                android:clickable="true"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="600"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Box 40"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />
            <View
                android:id="@+id/cd_View4"
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_below="@+id/cd_Box2"
                android:background="@color/pickItem" />

            <TextView
                android:id="@+id/cd_Box3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:padding="@dimen/_5sdp"
                android:clickable="true"
                android:layout_below="@+id/cd_View4"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="600"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Box 36"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />
            <View
                android:id="@+id/cd_View5"
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_below="@+id/cd_Box3"
                android:background="@color/pickItem" />

            <TextView
                android:id="@+id/cd_Box4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:padding="@dimen/_5sdp"
                android:clickable="true"
                android:layout_below="@+id/cd_View5"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="600"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Box 16 Cube"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />
            <View
                android:id="@+id/cd_View6"
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_below="@+id/cd_Box4"
                android:background="@color/pickItem" />

            <TextView
                android:id="@+id/cd_Box5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:padding="@dimen/_5sdp"
                android:clickable="true"
                android:layout_below="@+id/cd_View6"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="600"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Box 12 Cube"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />
            <View
                android:id="@+id/cd_View7"
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_below="@+id/cd_Box5"
                android:background="@color/pickItem" />

            <TextView
                android:id="@+id/cd_Box6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:padding="@dimen/_5sdp"
                android:layout_below="@+id/cd_View7"
                android:layout_alignParentEnd="true"
                android:clickable="true"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="600"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Box 10 Cube"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />
            <View
                android:id="@+id/cd_View8"
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_below="@+id/cd_Box6"
                android:background="@color/pickItem" />
            <TextView
                android:id="@+id/cd_Box7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:padding="@dimen/_5sdp"
                android:clickable="true"
                android:layout_below="@+id/cd_View8"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="600"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Box 7 Cube"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>