<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.OrderProcessingFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/pickOder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_25sdp"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            app:backgroundTint="@null"
            android:background="@drawable/fill_button_selector"
            android:textColor="@drawable/fill_button_text_selector"
            android:text="Pick Order"
            android:textAlignment="center"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/packOrder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@id/pickOder"
            android:textAllCaps="false"
            android:layout_alignStart="@+id/pickOder"
            android:layout_marginStart="0dp"
            app:backgroundTint="@null"
            android:background="@drawable/fill_button_selector"
            android:textColor="@drawable/fill_button_text_selector"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="Pack Order"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/pickBatch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@id/packOrder"
            android:textAllCaps="false"
            android:layout_alignStart="@+id/packOrder"
            android:layout_marginStart="0dp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            app:backgroundTint="@null"
            android:background="@drawable/fill_button_selector"
            android:textColor="@drawable/fill_button_text_selector"
            android:text="Pick Batch"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/labelPrinting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@id/pickBatch"
            android:layout_alignStart="@+id/pickBatch"
            android:layout_marginEnd="@dimen/_25sdp"
            android:textAllCaps="false"
            android:layout_marginStart="0dp"
            app:backgroundTint="@null"
            android:background="@drawable/fill_button_selector"
            android:textColor="@drawable/fill_button_text_selector"
            android:layout_marginTop="@dimen/_7sdp"
            android:onClick="label Printing"
            android:text="Customer Label Printing"
            tools:ignore="MissingConstraints,OnClick" />



    </RelativeLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>