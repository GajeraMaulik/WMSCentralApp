<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PoRecevingScreens.RecevingOrderNoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="@drawable/custom_toolbar"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/back_Po_Btn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:srcCompat="@drawable/short_left"
            tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/toolBarHeader_Ron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />


    </androidx.appcompat.widget.Toolbar>
        <Button
            android:id="@+id/atteachItem_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/toolBar"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            app:backgroundTint="@null"
            android:background="@drawable/fill_button_selector"
            android:textColor="@drawable/fill_button_text_selector"
            android:text="Atteach Item"
            android:textAlignment="center"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/reviewItemsAttached_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@id/atteachItem_btn"
            android:layout_alignStart="@+id/atteachItem_btn"
            android:layout_marginStart="0dp"
            app:backgroundTint="@null"
            android:background="@drawable/fill_button_selector"
            android:textColor="@drawable/fill_button_text_selector"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="Review Items Attached"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/shippingDetail_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@id/reviewItemsAttached_btn"
            android:layout_alignStart="@+id/reviewItemsAttached_btn"
            android:layout_marginStart="0dp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            app:backgroundTint="@null"
            android:background="@drawable/fill_button_selector"
            android:textColor="@drawable/fill_button_text_selector"
            android:text="Shipping Detail"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/submitOrder_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@id/shippingDetail_btn"
            android:layout_alignStart="@+id/shippingDetail_btn"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginStart="0dp"
            app:backgroundTint="@null"
            android:background="@drawable/fill_button_selector"
            android:textColor="@drawable/fill_button_text_selector"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="Submit Order"
            tools:ignore="MissingConstraints,OnClick" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>